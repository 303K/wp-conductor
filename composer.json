{
    "name":                 "gizburdt/conductor",
    "type":                 "project",
    "authors": [
        {
            "name":         "Gijs Jorissen",
            "email":        "gizburdt@gmail.com",
            "homepage":     "http://www.gizburdt.com/"
        }
    ],
    "require": {
        "php":                          ">=5.3.0",
        "composer/installers":          "~1.0",
        "wordpress":                    "3.7.1",
        "fancyguy/webroot-installer":   "1.0.0",
        "wpackagist/posts-to-posts":    "dev-master",
        "gizburdt/scaffold":            "dev-master"
    },
    "repositories": [
        {
            "type": "composer",
            "url":  "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name":         "wordpress",
                "type":         "webroot",
                "version":      "3.7.1",
                "dist": {
                    "type":     "zip",
                    "url":      "https://github.com/WordPress/WordPress/archive/3.7.1.zip"
                },
                "require" : {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "gizburdt/scaffold",
                "version": "dev-master",
                "source": {
                    "url": "https://github.com/Gizburdt/Wordpress-Scaffold.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],
    "extra": {
        "webroot-dir":          "wordpress",
        "webroot-package":      "wordpress"
    },
    "config": {
        "vendor-dir": "wp-content/vendor"
    }
}